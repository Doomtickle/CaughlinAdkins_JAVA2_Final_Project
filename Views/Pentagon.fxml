<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="petagonVB" spacing="15"
      xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="678.0"
      prefWidth="450.0"
      fx:controller="Controllers.PentagonController"
      translateX="150.0"
      translateY="10.0">
    <Text fill="cadetblue" translateX="25d" text="Pentagon">
        <font>
            <Font size="18.0"/>
        </font>
    </Text>
    <TextField fx:id="pentaSide" alignment="CENTER" opacity="0.8"
               maxHeight="80.0"
               prefHeight="50.0"
               maxWidth="130.0" promptText="Side">
        <font>
            <Font size="24.0"/>
        </font>
    </TextField>

    <HBox spacing="10" translateX="-35.0">
        <Button fx:id="pentagonArea" prefWidth="100.0" mnemonicParsing="false"
                onAction="#pentaAListener"
                text="    Area    "/>
        <Button fx:id="pentagonPeri" prefWidth="100.0" layoutX="32.0" layoutY="188.0"
                mnemonicParsing="false" onAction="#pentaPListener"
                text="Perimeter"/>
    </HBox>
    <Label fx:id="periLabel" prefHeight="20.0" prefWidth="190.0">
        <font>
            <Font name="Calibri Bold" size="16.5"/>
        </font>
    </Label>
    <Label fx:id="areaLabel" prefHeight="20.0" prefWidth="190.0"
           textFill="#b50d19">
        <font>
            <Font name="Calibri Bold" size="16.5"/>
        </font>
    </Label>
    <VBox spacing="10" fx:id="pentagonPane" prefWidth="250.0" prefHeight="100.00">

    </VBox>
    <HBox spacing="10">
        <Button fx:id="helpButton" mnemonicParsing="false" onAction="#helpListener" prefHeight="25.0" prefWidth="68.0"
                text="Help?"/>
        <Button fx:id="resetButton" contentDisplay="CENTER" mnemonicParsing="false" onAction="#resetFields"
                prefHeight="25.0" prefWidth="68.0" text="Reset"/>
    </HBox>
</VBox>
